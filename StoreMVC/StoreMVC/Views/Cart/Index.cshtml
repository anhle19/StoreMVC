@model StoreMVC.Models.View.CartViewModel
@{

}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <a class="breadcrumb-item text-dark" href="#">Shop</a>
                <span class="breadcrumb-item active">Shopping Cart</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            @if (Model.CartItems != null && Model.CartItems.Any())
            {
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                            <th><th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model.CartItems)
                        {
                            <form action="@Url.Action("UpdateQuantity","Cart")" method="post">
                            <tr>
                                <input type="hidden" name="productId" value="@item.ProductId" />

                                <td class="align-middle">
                                    <img src="~/Resources/img-product/@item.ProductImage" alt="" style="width: 50px;">
                                    @item.ProductName
                                </td>
                                <td class="align-middle">@item.Price VND</td>
                                <td class="align-middle">

                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <div class="input-group-btn">
                                            <button type="button" class="btn btn-sm btn-primary btn-minus">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                        </div>

                                        <input type="text" name="quantity"
                                               class="form-control form-control-sm bg-secondary border-0 text-center quantity-input"
                                               value="@item.Quantity" min="1" data-price="@item.Price" />

                                        <div class="input-group-btn">
                                            <button type="button" class="btn btn-sm btn-primary btn-plus">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>

                                </td>
                                <td class="align-middle total-cell">@item.Total VND</td>
                                <td class="align-middle">
                                    <a href="@Url.Action("Remove","Cart", new {id = item.ProductId})" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a>
                                </td>
                                <td class="align-middle">
                                    <button type="submit" class="btn btn-sm btn-success">
                                        Cập nhật
                                    </button>
                                </td>
                            </tr>
                            </form>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <span class="text-danger">Giỏ hàng trống</span>
            }

        </div>
        <div class="col-lg-4">
            <form class="mb-30" action="">
                <div class="input-group">
                    <input type="text" class="form-control border-0 p-4" placeholder="Coupon Code">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Apply Coupon</button>
                    </div>
                </div>
            </form>
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Subtotal</h6>
                        <h6>@Model.CartTotal VND</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">@Model.ShippingCost VND</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Total</h5>
                        <h5>@Model.Total VND</h5>
                    </div>
                    <a class="btn btn-block btn-primary font-weight-bold my-3 py-3" href="@Url.Action("Index","Order")">Proceed To Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
